 <aside>
   <%= render "map" %>
   <%= render "fside" %>
</aside>
<!--左側選單結束 -->

<!--內容 開始 -->
<artical>
  <div class="path">
    首頁/
    <mark>最新消息</mark>
  </div>

  <div class="news">
    <% @messages.each do |m| %>
      <li><%= image_tag("newsIcon.gif")  %>
        <p><%= m.date.strftime("%Y-%m-%d") %></p>
        <h3> <%= m.title %> </h3>
        <div class="button2 Newsfloat" id="button" name="button">
          <%= link_to "詳情內容", message_path(m) %>
        </div>
      </li>
    <% end %>
  </div>
</artical>
